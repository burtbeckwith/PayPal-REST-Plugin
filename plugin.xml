<plugin name='pay-pal-rest' version='0.7.5' grailsVersion='2.2 &gt; *'>
  <author>Michael C. Main</author>
  <authorEmail>deusprogrammer@gmail.com</authorEmail>
  <title>Grails Pay Pal REST Plugin</title>
  <description>A plugin to simplify the PayPal REST API.
</description>
  <type>PayPalRESTGrailsPlugin</type>
  <resources>
    <resource>com.trinary.paypal.test.TestController</resource>
    <resource>com.trinary.paypal.test.TestService</resource>
  </resources>
  <repositories>
    <repository name='grailsCentral' url='http://grails.org/plugins' />
    <repository name='mavenCentral' url='http://repo1.maven.org/maven2/' />
  </repositories>
  <dependencies />
  <plugins>
    <compile>
      <plugin group='org.grails.plugins' name='cache' version='1.0.0' />
      <plugin group='org.grails.plugins' name='jersey-request-builder' version='1.1.3' />
    </compile>
    <runtime>
      <plugin group='org.grails.plugins' name='resources' version='1.1.6' />
      <plugin group='org.grails.plugins' name='jquery' version='1.8.0' />
      <plugin group='org.grails.plugins' name='hibernate' version='2.2.4' />
      <plugin group='org.grails.plugins' name='database-migration' version='1.1' />
    </runtime>
    <build>
      <plugin group='org.grails.plugins' name='tomcat' version='2.2.4' />
    </build>
  </plugins>
  <runtimePluginRequirements />
  <behavior />
</plugin>